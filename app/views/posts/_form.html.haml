= form_for @post do |f|
  <%= errors_for(@post)%>

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :draft
    = f.check_box :draft
  .field
    =f.fields_for :questions do |f|
      =render "post_question", f: f

  .actions
    = f.submit 'Save'
