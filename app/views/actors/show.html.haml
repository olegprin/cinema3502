= title "Actor #{@actor.title}" 

= @actor.title
= @actor.description
%dt
  = image_tag @actor.uploaded_photo.url(:preview)
  = render partial: "comments/comments", locals: {commentable: @actor} 
  = render partial: "comments/form", locals: {commentable: @actor, comment: Comment.new} 

  -if signed_in?
    = link_to 'Edit', edit_actor_path(@actor)
    = link_to 'Back', actors_path
